@model IEnumerable<ResultDoctorDto>

@{
    ViewData["Title"] = "Doktor Listesi";
}

<h2 class="mb-4 text-primary">
    <i class="fas fa-images me-2"></i>@ViewData["Title"]
</h2>

<table class="table table-bordered table-hover text-center align-middle">
    <thead class="table-primary">
        <tr>
            <th>Id</th>
            <th>Doktor Adı</th>
            <th>Açıklama</th>
            <th>Departmanı</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DoctorId</td>

                <td>@item.Description</td>
                <td>@item.DepartmentId</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="60" height="80" class="rounded shadow-sm" alt="Doktor Görseli" />
                    }
                </td>
                <td>
                    <a asp-action="UpdateDoctor" asp-route-id="@item.DoctorId" class="btn btn-primary">Güncelle</a>
                    <a asp-action="DeleteDoctor" asp-route-id="@item.DoctorId" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="CreateDoctor" class="btn btn-primary mt-3">Yeni Doktor Ekle</a>