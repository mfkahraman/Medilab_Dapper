@model List<ResultDoctorWithDepartmentDto>

@*
    _DoctorsComponent
*@

<section id="doctors" class="doctors section">

    <!-- Bölüm Başlığı -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Doktorlarımız</h2>
        <p>Medilab'ın deneyimli ve uzman doktor kadrosu ile sağlığınız emin ellerde.</p>
    </div><!-- Bölüm Başlığı Sonu -->

    <div class="container">
        <div class="row gy-4">
            @for (int i = 0; i < Model.Count; i++)
            {
                var doctor = Model[i];
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="@((i + 1) * 100)">
                    <div class="team-member d-flex align-items-start">
                        <div class="pic">
                            <img src="@(string.IsNullOrEmpty(doctor.ImageUrl) ? "/images/default-doctor.jpg" : doctor.ImageUrl)"
                                 class="img-fluid"
                                 alt="@doctor.NameSurname" />
                        </div>
                        <div class="member-info">
                            <h4>@doctor.NameSurname</h4>
                            <span>@doctor.DepartmentName</span>
                            <p>@doctor.Description</p>
                            <div class="social">
                                <a href="#"><i class="bi bi-twitter"></i></a>
                                <a href="#"><i class="bi bi-facebook"></i></a>
                                <a href="#"><i class="bi bi-instagram"></i></a>
                                <a href="#"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            
                <!-- Doktor -->
            }
        </div>
    </div>

</section>
