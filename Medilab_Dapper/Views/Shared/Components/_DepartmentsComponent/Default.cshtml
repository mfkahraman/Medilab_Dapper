@model List<ResultDepartmentDto>

@*
    _DepartmentsComponent
*@

<section id="departments" class="departments section">

    <!-- Bölüm Başlığı -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Bölümlerimiz</h2>
        <p>Medilab’da hastalarımıza sunduğumuz uzmanlık alanlarımız ve hizmetlerimiz.</p>
    </div><!-- Bölüm Başlığı Sonu -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row">
            <!-- Sol Menü -->
            <div class="col-lg-3">
                <ul class="nav nav-tabs flex-column">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var dept = Model[i];
                        <li class="nav-item">
                            <a class="nav-link @(i == 0 ? "active show" : "")" data-bs-toggle="tab" href="#departments-tab-@dept.DepartmentId">@dept.DepartmentName</a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Sağ İçerik -->
            <div class="col-lg-9 mt-4 mt-lg-0">
                <div class="tab-content">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var dept = Model[i];
                        <div class="tab-pane @(i == 0 ? "active show" : "")" id="departments-tab-@dept.DepartmentId">
                            <div class="row">
                                <div class="col-lg-8 details order-2 order-lg-1">
                                    <h3>@dept.DepartmentName</h3>
                                    <p class="fst-italic">@dept.Description</p>
                                    <p>Hastalarımıza daha iyi hizmet sunmak için alanında uzman doktorlarımızla çalışıyoruz.</p>
                                </div>
                                <div class="col-lg-4 text-center order-1 order-lg-2">
                                    <img src="@dept.ImageUrl" alt="@dept.DepartmentName Bölümü" class="img-fluid" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
